@{
    ViewData["Title"] = "Tela Login - DevConnect";
}

<link rel="stylesheet" href="~/css/login.css">

<script defer>
  let usuarioNovoCadastro = "@TempData[key: "UsuarioNovoCadastrado"]";
  
  if(usuarioNovoCadastro == "Cadastrado"){
     alert("Usuario cadastrado com sucesso! Se logue para navegar em nossa plataforma 🫡");
  }
</script>

<h1>Tela principal login - DevConnect</h1>
    <main>
        <div>

            <form class="estilo-formulario">
                <img src="~/images/logo-devconnect-lg.svg" alt="Logo DevConnect">

                <div class="formulario-campos">
                    <label for="">Nome de usuario:</label>
                    <input type="text" name="" id="">
                </div>

                <div class="formulario-campos">
                    <label for="">Senha:</label>
                    <input type="password" nome="Senha" id="">
                </div>

                <button type="submit" class="formulario-botao-marrow">Entrar</button>

                <p>ou</p>

                <a href="#">Esqueceu a senha?</a>

            </form>

            <section id="secao-cadastro" class="estilo-formulario">
                <p>Não tem uma conta? <a href="#">Cadastre-se</a></p>
            </section>

            <p>Obtenha o aplicativo</p>

            <section id="secao-instalacao">
                <img src="~/images/app-store.svg" alt=" Imagem falando da instalacao no App Store">

                <img src="~/images/google-play.svg" alt="Imagem falando da instalacao no Play Store">
            </section>
        </div>
    </main>